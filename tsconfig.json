{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["packages/types/src/*"],
      "@sdk/*": ["packages/sdk/src/*"],
      "@tools/*": ["packages/tool-registry/src/*"],
      "@orchestration/*": ["packages/orchestration/src/*"],
      "@analytics/*": ["packages/analytics-sdk/src/*"]
    }
  }
}
